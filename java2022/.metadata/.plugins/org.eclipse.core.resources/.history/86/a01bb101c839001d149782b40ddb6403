	 int number = 2 ;
	 int Kalan = number % 2 ;
	 boolean isPrime = true;
	 
	 if(number==1) {
		 System.out.println("sayı asal değildri");
		 return;
	 }
	 
	 if(number<1) {
		 System.out.println("Geçersiz sayı");
	 }
	  for  ( int i=2; i< number;i++) {
		  if(number % i == 0 )
			  isPrime = false;
	  }
	  
	 
	}

}
